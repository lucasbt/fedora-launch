# fedoralaunch configuration file
#
# This file contains the default configuration for fedoralaunch.
# You can override these values by creating a user configuration file.
#
# To edit this file, run 'fedoralaunch config'

# Verbose mode (true/false)
FEDORALAUNCH_VERBOSE=false

# LIBVA driver for Intel (i965 for Haswell and earlier)
FEDORALAUNCH_LIBVA_DRIVER_NAME=i965

# Color scheme (prefer-dark/prefer-light)
FEDORALAUNCH_GNOME_COLOR_SCHEME=prefer-dark

# Enable animations (true/false)
FEDORALAUNCH_GNOME_ENABLE_ANIMATIONS=false

# Text scaling factor (1.0 = 100%)
FEDORALAUNCH_GNOME_TEXT_SCALING=1.05

# Enable Night light (true/false)
FEDORALAUNCH_ENABLE_NIGHT_LIGHT=true

# Night Light temperature (1000-4000, recommended: 3700)
FEDORALAUNCH_GNOME_NIGHT_LIGHT_TEMP=3700

# Default monospace font
FEDORALAUNCH_FONT_MONOSPACE="JetBrains Mono 11"

# Font hinting (none/slight/medium/full)
FEDORALAUNCH_FONT_HINTING=slight

# Antialiasing (none/grayscale/rgba)
FEDORALAUNCH_FONT_ANTIALIASING=rgba

# SDKMAN Java version
FEDORALAUNCH_SDKMAN_JAVA_VERSION=25.0.1-tem

# SDKMAN Maven version (empty for latest)
FEDORALAUNCH_SDKMAN_MAVEN_VERSION=

# SDKMAN Gradle version (empty for latest)
FEDORALAUNCH_SDKMAN_GRADLE_VERSION=

# NodeJS version (using NVM with major number or latest lts if empty)
FEDORALAUNCH_NODEJS_VERSION=

# Python version (via pyenv)
FEDORALAUNCH_PYENV_PYTHON_VERSION=3.12.0

# Go version (empty to fetch latest from official site)
FEDORALAUNCH_GOLANG_VERSION=

# Rust version rustup (empty to fetch latest from official site)
FEDORALAUNCH_RUST_VERSION=

# Enable RPMFUSION FREE and non-free repositories (true/false)
FEDORALAUNCH_ENABLE_RPMFUSION_FREE_NONFREE_REPOS=true

# Install proprietary firmware (true/false)
FEDORALAUNCH_INSTALL_PROPRIETARY_FIRMWARE=true

# Swappiness (0-100, recommended: 10 for desktop)
FEDORALAUNCH_SWAPPINESS=10

# VFS cache pressure (default: 100, lower = keep cache longer)
FEDORALAUNCH_VFS_CACHE_PRESSURE=50

# Dirty page ratios (percentage of RAM)
FEDORALAUNCH_DIRTY_RATIO=10
FEDORALAUNCH_DIRTY_BACKGROUND_RATIO=5

# I/O Scheduler (mq-deadline, kyber, bfq, none)
FEDORALAUNCH_IO_SCHEDULER=mq-deadline

# Journal max size
FEDORALAUNCH_JOURNAL_MAX_SIZE=100M
